<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-dark">
    <a class="font-weight-bold navbar-brand text-light" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarTogglerDemo02"
      aria-controls="navbarTogglerDemo02"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
      <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
        <li class="nav-item active ml-4">
          <a class="nav-item nav-link text-light" href="/urls">My URLs</a>
        </li>
        <li class="nav-item active ml-4">
          <a class="nav-item nav-link text-light" href="/urls/new">Create New URL</a>
        </li>
      </ul>

      <% if(typeof username!=='undefined'){%>

      <h5 class="text-light mr-3 p-3"><%=username%></h5>

      <form class="form-inline my-2 my-lg-0" method="POST" action="/logout">
        <button type="submit" class="btn btn-warning">Logout</button>
      </form>
      <% }else{ %>
      <!-- sign in form -->
      <form class="form-inline my-2 my-lg-0" action="/login" method="POST">
        <label for="username"></label>
        <input class="form-control" type="text" name="username" placeholder="Username" style="width: 300px; margin: 1em" />
        <button type="submit" class="btn btn-success">Sign in</button>
      </form>
      <% } %>
    </div>
  </nav>
</header>
